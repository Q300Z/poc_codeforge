{
  "name": "@q300z/forge-engine",
  "version": "1.0.0",
  "description": "Industrial JSON to HTML Render Engine with Design Tokens and Multi-page support",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "forge-engine": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src/style.css",
    "README.md"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Q300Z/poc_codeforge.git"
  },
  "keywords": [
    "render-engine",
    "json-to-html",
    "low-code",
    "design-tokens",
    "tailwind",
    "static-site-generator"
  ],
  "author": "tboutin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Q300Z/poc_codeforge/issues"
  },
  "homepage": "https://github.com/Q300Z/poc_codeforge#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc",
    "clean": "rm -rf dist generated coverage test-dist-site test-multi-site test-output.html index.html docs.html",
    "start": "node --loader ts-node/esm src/index.ts",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.ts --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^3.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.4",
    "vitest-axe": "^0.1.0"
  }
}