{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "theme"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ],
    "declaration-property-value-no-unknown": null,
    "property-no-deprecated": [
      true,
      {
        "ignoreProperties": ["clip"]
      }
    ],
    "no-descending-specificity": null,
    "import-notation": "string"
  }
}